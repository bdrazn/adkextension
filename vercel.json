{
  "version": 2,
  "buildCommand": "npm install",
  "outputDirectory": "public",
  "rewrites": [
    { "source": "/list-apps", "destination": "/api/index" },
    { "source": "/run_sse", "destination": "/api/index" },
    { "source": "/run_ollama_sse", "destination": "/api/index" },
    { "source": "/context-tools", "destination": "/api/index" },
    { "source": "/apps/(.*)", "destination": "/api/index" }
  ],
  "functions": { "api/index.mjs": { "maxDuration": 60 } },
  "env": { "ADK_ENABLE_COMPACTION": "0" }
}
